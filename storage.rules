rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {

    // ============= Helper Functions =============

    // Check if request has valid App Check token (bot protection)
    function hasValidAppCheckToken() {
      return request.auth.token.firebase.sign_in_provider != null;
    }

    function isSignedIn() {
      return request.auth != null && hasValidAppCheckToken();
    }

    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    // Storage Quota Limits (enforced at application level):
    // - Family: 25 MB total storage (also used during trial)
    // - Single Agency: 50 MB total storage
    // - Multi Agency: 500 MB total storage
    //
    // Note: Storage Rules cannot access Firestore to check total usage.
    // Total quota enforcement is done in src/lib/firebase/storage.ts
    // These rules only enforce individual file size limits.

    // Individual file size limits
    function isValidImageSize() {
      return request.resource.size < 5 * 1024 * 1024; // 5 MB max per image
    }

    function isValidDocSize() {
      return request.resource.size < 10 * 1024 * 1024; // 10 MB max per document
    }

    // Validate image file type
    function isImage() {
      return request.resource.contentType.matches('image/.*');
    }

    // Validate document file types (PDF, DOC, DOCX, etc.)
    function isDocument() {
      return request.resource.contentType.matches('application/.*') ||
             request.resource.contentType.matches('text/.*');
    }

    // ============= User Profile Images =============

    match /users/{userId}/profile/{fileName} {
      // Users can read their own profile images
      allow read: if isSignedIn();

      // Users can upload their own profile images
      allow write: if isSignedIn() &&
        isOwner(userId) &&
        isImage() &&
        isValidImageSize();

      // Users can delete their own profile images
      allow delete: if isSignedIn() && isOwner(userId);
    }

    // ============= Elder Profile Images =============

    match /elders/{elderId}/profile/{fileName} {
      // Any authenticated user can read elder images
      // (access control is in Firestore rules)
      allow read: if isSignedIn();

      // Any authenticated user can upload elder images
      // (group membership checked in app logic)
      allow write: if isSignedIn() &&
        isImage() &&
        isValidImageSize();

      allow delete: if isSignedIn();
    }

    // ============= Group Documents =============

    match /groups/{groupId}/documents/{fileName} {
      // Group members can read documents
      // (Group membership is verified in application code)
      allow read: if isSignedIn();

      // Group members can upload documents
      // Total storage quota is checked in application code before upload
      allow write: if isSignedIn() &&
        isDocument() &&
        isValidDocSize();

      // Group members can delete documents
      allow delete: if isSignedIn();
    }

    // ============= Default Deny =============

    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
