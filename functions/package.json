{
  "name": "functions",
  "description": "Firebase Cloud Functions for MyGuide Health",
  "scripts": {
    "build": "tsc",
    "build:watch": "tsc --watch",
    "serve": "npm run build && firebase emulators:start --only functions",
    "shell": "npm run build && firebase functions:shell",
    "start": "npm run shell",
    "deploy": "firebase deploy --only functions",
    "logs": "firebase functions:log",
    "test": "jest",
    "test:functions": "jest --verbose"
  },
  "engines": {
    "node": "20"
  },
  "main": "lib/index.js",
  "dependencies": {
    "@stripe/stripe-js": "^8.5.2",
    "firebase-admin": "^12.0.0",
    "firebase-functions": "^5.1.1",
    "stripe": "^20.0.0",
    "twilio": "^5.10.6"
  },
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "@types/node": "^20.0.0",
    "firebase-functions-test": "^3.4.1",
    "jest": "^30.2.0",
    "ts-jest": "^29.4.6",
    "typescript": "^5.0.0"
  },
  "private": true
}
