      // Group admin or members can read screenings
      allow read: if isGroupAdmin(resource.data.groupId) ||
        (isMemberOfGroup(resource.data.groupId) && hasActiveAccess(request.auth.uid));

      // System/AI creates screenings
      allow create: if isSignedIn() &&
        hasActiveAccess(request.auth.uid) &&
        isMemberOfGroup(request.resource.data.groupId);

      // Screenings are immutable once created
      allow update: if false;

      // Group admin can delete screenings
      allow delete: if isGroupAdmin(resource.data.groupId);
    }

    // ============= Dementia Assessment Sessions Collection =============
    // In-progress Q&A assessment sessions

    match /dementiaAssessmentSessions/{sessionId} {
      // Only the caregiver who created the session can read it
      allow read: if isSignedIn() &&
        resource.data.caregiverId == request.auth.uid;

      // Members with active access can create sessions
      allow create: if isSignedIn() &&
        hasActiveAccess(request.auth.uid) &&
        isMemberOfGroup(request.resource.data.groupId) &&
        request.resource.data.caregiverId == request.auth.uid;

      // Only the caregiver who created can update (save answers)
      allow update: if isSignedIn() &&
        resource.data.caregiverId == request.auth.uid &&
        hasActiveAccess(request.auth.uid);

      // Caregiver who created can delete (abandon)
      allow delete: if isSignedIn() &&
        resource.data.caregiverId == request.auth.uid;
    }

    // ============= Dementia Assessment Results Collection =============
    // Completed Q&A assessment results with AI-generated summaries

    match /dementiaAssessmentResults/{resultId} {
      // Caregiver who created or group admin can read results
      allow read: if isSignedIn() &&
        (resource.data.caregiverId == request.auth.uid ||
         isGroupAdmin(resource.data.groupId) ||
         (isMemberOfGroup(resource.data.groupId) && hasActiveAccess(request.auth.uid)));

      // System creates results when assessment completes
      allow create: if isSignedIn() &&
        hasActiveAccess(request.auth.uid) &&
        isMemberOfGroup(request.resource.data.groupId);

      // Caregiver or admin can update status (mark as reviewed, shared)
      allow update: if isSignedIn() &&
        (resource.data.caregiverId == request.auth.uid ||
         isGroupAdmin(resource.data.groupId)) &&
        hasActiveAccess(request.auth.uid);

      // Results are never deleted (audit trail)
      allow delete: if false;
    }

    // ============= Incidents Collection =============
    // Incident reports for falls, medication errors, behavioral issues, etc.

    match /incidents/{incidentId} {
      // Group admin or members can read incidents
      allow read: if isGroupAdmin(resource.data.groupId) ||
        (isMemberOfGroup(resource.data.groupId) && hasActiveAccess(request.auth.uid));

      // Group members with write permission can create incidents
      allow create: if isSignedIn() &&
        hasActiveAccess(request.auth.uid) &&
        isMemberOfGroup(request.resource.data.groupId);

      // Group members with write permission can update incidents
      allow update: if hasActiveAccess(request.auth.uid) &&
        isMemberOfGroup(resource.data.groupId);

      // Group admin can delete incidents
      allow delete: if isGroupAdmin(resource.data.groupId);
    }

    // ============= Medication Adherence Predictions Collection =============
    // AI-generated adherence risk predictions

    match /medicationAdherencePredictions/{predictionId} {
      // Group admin or members can read predictions
      allow read: if isGroupAdmin(resource.data.groupId) ||
        (isMemberOfGroup(resource.data.groupId) && hasActiveAccess(request.auth.uid));

      // System/AI creates predictions
      allow create: if isSignedIn() &&
        hasActiveAccess(request.auth.uid) &&
        isMemberOfGroup(request.resource.data.groupId);

      // Members can update (to mark as reviewed/resolved)
      allow update: if hasActiveAccess(request.auth.uid) &&
        isMemberOfGroup(resource.data.groupId);

      // Group admin can delete predictions
      allow delete: if isGroupAdmin(resource.data.groupId);
    }

    // ============= Nutrition Analysis Reports Collection =============
    // AI-generated nutrition pattern analysis

    match /nutritionAnalysisReports/{reportId} {
      // Group admin or members can read reports
      allow read: if isGroupAdmin(resource.data.groupId) ||
        (isMemberOfGroup(resource.data.groupId) && hasActiveAccess(request.auth.uid));

      // System/AI creates reports
      allow create: if isSignedIn() &&
        hasActiveAccess(request.auth.uid) &&
        isMemberOfGroup(request.resource.data.groupId);

      // Reports are immutable once created
      allow update: if false;

      // Group admin can delete reports
      allow delete: if isGroupAdmin(resource.data.groupId);
    }

    // ============= User Notifications Collection =============
    // Unified notification system for bell icon
    // All notification types flow into this collection

    match /user_notifications/{notificationId} {
      // Users can read their own notifications
      allow read: if isSignedIn() &&
        resource.data.userId == request.auth.uid;

      // System/Cloud Functions create notifications
      // Users can create notifications for themselves (e.g., from client-side actions)
      allow create: if isSignedIn() &&
        request.resource.data.userId == request.auth.uid;

      // Users can mark as read/dismissed only
      allow update: if isSignedIn() &&
        resource.data.userId == request.auth.uid &&
        request.resource.data.diff(resource.data).affectedKeys().hasOnly(['read', 'dismissed']);

      // Users can delete their own notifications
      allow delete: if isSignedIn() &&
        resource.data.userId == request.auth.uid;
    }

    // ============= Caregiver Notes Collection =============
    // Private notes for caregivers to capture insights and tips

    match /caregiver_notes/{noteId} {
      // Users can read their own notes (primary use case)
      // No group membership check needed for own notes
      allow read: if isSignedIn() &&
        resource.data.userId == request.auth.uid;

      // Users can create their own notes
      // Group membership validated at API level for flexibility
      allow create: if isSignedIn() &&
        hasActiveAccess(request.auth.uid) &&
        request.resource.data.userId == request.auth.uid;

      // Users can update their own notes
      allow update: if isSignedIn() &&
        hasActiveAccess(request.auth.uid) &&
        resource.data.userId == request.auth.uid;

      // Users can delete their own notes
      // GDPR: Allow even without active trial for Right to be Forgotten
      allow delete: if isSignedIn() &&
        resource.data.userId == request.auth.uid;
    }

    // ============= Published Tips Collection =============
    // Public tips shared by caregivers (anonymized)

    match /published_tips/{tipId} {
      // Anyone can read published tips (public content)
      allow read: if true;

      // Only the source note owner can create a published tip
      // System validates this via API route
      allow create: if isSignedIn() &&
        hasActiveAccess(request.auth.uid) &&
        request.resource.data.sourceUserId == request.auth.uid;

      // Only the source note owner can update their tip
      allow update: if isSignedIn() &&
        hasActiveAccess(request.auth.uid) &&
        resource.data.sourceUserId == request.auth.uid;

      // Only the source note owner can delete (unpublish)
      // GDPR: Allow even without active trial for Right to be Forgotten
      allow delete: if isSignedIn() &&
        resource.data.sourceUserId == request.auth.uid;
    }

    // ============= Caregiver Invites Collection =============
    // SMS invites sent by super admin to recruit caregivers

    match /caregiver_invites/{inviteId} {
      // Super admin can read invites for their agency
      // The invite creator (super admin) can read their invites
      allow read: if isSignedIn() &&
        (resource.data.superAdminId == request.auth.uid ||
         isSuperAdmin(resource.data.agencyId));

      // Only super admin can create invites for their agency
      allow create: if isSignedIn() &&
        hasActiveAccess(request.auth.uid) &&
        isSuperAdmin(request.resource.data.agencyId) &&
        request.resource.data.superAdminId == request.auth.uid;

      // Super admin can update (cancel) invites
      // System updates status to 'accepted' via API route
      allow update: if isSignedIn() &&
        (isSuperAdmin(resource.data.agencyId) ||
         // Allow API route to update status when caregiver accepts
         request.resource.data.diff(resource.data).affectedKeys().hasOnly(['status', 'acceptedAt', 'acceptedByUserId', 'updatedAt']));

      // Super admin can delete invites
      allow delete: if isSignedIn() &&
        isSuperAdmin(resource.data.agencyId);
    }

    // ============= Caregiver Profiles Collection =============
    // Detailed caregiver profiles with certifications, availability, etc.

    match /caregiver_profiles/{profileId} {
      // Super admin can read all caregiver profiles in their agency
      // Caregiver can read their own profile
      allow read: if isSignedIn() &&
        hasActiveAccess(request.auth.uid) &&
        (resource.data.userId == request.auth.uid ||
         isSuperAdmin(resource.data.agencyId));

      // Caregivers can create their own profile during onboarding
      allow create: if isSignedIn() &&
        hasActiveAccess(request.auth.uid) &&
        request.resource.data.userId == request.auth.uid;

      // Caregivers can update their own profile
      // Super admin can update caregiver profiles (for admin overrides)
      allow update: if isSignedIn() &&
        hasActiveAccess(request.auth.uid) &&
        (resource.data.userId == request.auth.uid ||
         isSuperAdmin(resource.data.agencyId));

      // Only super admin can delete caregiver profiles
      allow delete: if isSignedIn() &&
        isSuperAdmin(resource.data.agencyId);
    }

    // ============= AI Feedback Collection =============
    // User feedback on AI features (ratings, actions, corrections)
    // Used for continuous improvement of AI responses

    match /aiFeedback/{feedbackId} {
      // Users can read their own feedback
      // Group admin can read all feedback for their group
      // Super admin can read all feedback for their agency (aggregated view)
      allow read: if isSignedIn() &&
        (resource.data.userId == request.auth.uid ||
         isGroupAdmin(resource.data.groupId) ||
         (resource.data.groupId != null && isMemberOfGroup(resource.data.groupId)) ||
         (resource.data.agencyId != null && isSuperAdmin(resource.data.agencyId)));

      // Users can create feedback for their own interactions
      allow create: if isSignedIn() &&
        hasActiveAccess(request.auth.uid) &&
        request.resource.data.userId == request.auth.uid;

      // Feedback is immutable - no edits after submission
      // This ensures data integrity for AI learning
      allow update: if false;

      // Users can delete their own feedback (GDPR compliance)
      // Group admin can delete feedback for their group
      allow delete: if isSignedIn() &&
        (resource.data.userId == request.auth.uid ||
         isGroupAdmin(resource.data.groupId));
    }

    // ============= Feature Engagement Collection =============
    // Tracks user engagement with features for preference learning

    match /featureEngagement/{eventId} {
      // Users can read their own engagement data
      allow read: if isSignedIn() &&
        resource.data.userId == request.auth.uid;

      // Users can create their own engagement events
      allow create: if isSignedIn() &&
        request.resource.data.userId == request.auth.uid;

      // Engagement events are immutable (audit trail)
      allow update: if false;

      // Users can delete their own engagement data (GDPR)
      allow delete: if isSignedIn() &&
        resource.data.userId == request.auth.uid;
    }

    // ============= User Feature Stats Collection =============
    // Aggregated feature engagement statistics per user

    match /userFeatureStats/{statsId} {
      // Users can read their own stats
      allow read: if isSignedIn() &&
        resource.data.userId == request.auth.uid;

      // System creates/updates stats
      allow create: if isSignedIn() &&
        request.resource.data.userId == request.auth.uid;

      // Users can update their own stats (for aggregation)
      allow update: if isSignedIn() &&
        resource.data.userId == request.auth.uid;

      // Users can delete their own stats (GDPR)
      allow delete: if isSignedIn() &&
        resource.data.userId == request.auth.uid;
    }

    // ============= Smart Interaction Metrics Collection =============
    // Tracks smart response quality metrics for learning

    match /smartInteractionMetrics/{metricId} {
      // Users can read their own metrics
      allow read: if isSignedIn() &&
        resource.data.userId == request.auth.uid;

      // Users can create their own metrics
      allow create: if isSignedIn() &&
        request.resource.data.userId == request.auth.uid;

      // System updates metrics (for follow-up detection)
      allow update: if isSignedIn() &&
        resource.data.userId == request.auth.uid;

      // Users can delete their own metrics (GDPR)
      allow delete: if isSignedIn() &&
        resource.data.userId == request.auth.uid;
    }

    // ============= User Smart Quality Stats Collection =============
    // Aggregated smart quality statistics per user

    match /userSmartQualityStats/{statsId} {
      // Users can read their own stats
      allow read: if isSignedIn() &&
        resource.data.userId == request.auth.uid;

      // Users can create their own stats
      allow create: if isSignedIn() &&
        request.resource.data.userId == request.auth.uid;

      // Users can update their own stats
      allow update: if isSignedIn() &&
        resource.data.userId == request.auth.uid;

      // Users can delete their own stats (GDPR)
      allow delete: if isSignedIn() &&
        resource.data.userId == request.auth.uid;
    }

    // ============= User Smart Preferences Collection =============
    // Learned and manual smart preferences per user

    match /userSmartPreferences/{prefsId} {
      // Users can read their own preferences
      allow read: if isSignedIn() &&
        resource.data.userId == request.auth.uid;

      // Users can create their own preferences
      allow create: if isSignedIn() &&
        request.resource.data.userId == request.auth.uid;

      // Users can update their own preferences
      allow update: if isSignedIn() &&
        resource.data.userId == request.auth.uid;

      // Users can delete their own preferences (GDPR)
      allow delete: if isSignedIn() &&
        resource.data.userId == request.auth.uid;
    }

    // ============= Default Deny =============

    // Deny all other access by default
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
